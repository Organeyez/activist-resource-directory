<div class="sign-up-form">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
        <%= f.label :remember_me, "Remember Me", class: "form-label remember-me-text" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Login", class: "login-btn btn-outline" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

