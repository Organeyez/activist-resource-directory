<h1>User Index Page</h1>
<h6>All Users</h6>
  <table style="width:100%">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Sign-up date</th> 
      <th>Subscribed?</th>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to "#{user.username}", user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.strftime("%m/%e/%y, %l:%M %p") %></td>
      <td><%= user.subscribe %></td>
    </tr>
  <% end %>
  </table><br />

<h6>Subscriber Emails</h6>
  <table style="width:100%">
    <tr>
      <th>Email</th>
    </tr>
  <% @subscribed_users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
    </tr>
  <% end %>
  </table>
